<div class="section">
  <div class="content">
<h1 class="login-title">新規登録</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true,class: "login" %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "login" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",class: "login" %>
  </div>

  <div class="field">
    <%= f.label "passwordを再入力してください" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "login" %>
  </div>

  <div class="actions">
    <%= f.submit "サインアップ", class: "login-submit" %>
  </div>
<% end %>
</div>
</div>